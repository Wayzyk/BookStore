%main.container
  %h1.general-title-margin
    = t('titles.users.settings')
  %ul.nav.clearfix.mb-20{role: "tablist"}
    %li.tab-item.active{role: "presentation"}
      %a.tab-link{href: "#address", 'aria-controls': "address", role: "tab", 'data-toggle': "tab"}
        = t('users.settings.tabs_titles.address')
    %li.tab-item{role: "presentation"}
      %a.tab-link{href: "#privacy", 'aria-controls': "privacy", role: "tab", 'data-toggle': "tab"}
        = t('users.settings.tabs_titles.privacy')
  .tab-content
    #address.tab-pane.fade.in.active.general-main-wrap{role: "tabpanel"}
      .hidden-xs.hidden-sm
        .row
          .col-md-5
            %h3.general-subtitle.mt-0
              = t('users.settings.titles.billing')
          .col-md-5.col-md-offset-1
            %h3.general-subtitle.mt-0
              = t('users.settings.titles.shipping')
      .row
        .col-md-5.mb-40
          = simple_form_for @address do |f|
            = hidden_field_tag "address[type]", 'BillingAddress'
            .visible-xs.visible-sm
              %h3.general-subtitle.mt-0
              = t('users.settings.titles.billing')
            = render 'address_form', f: f, address: @billing_address
        .col-md-5.col-md-offset-1.mb-25
          = simple_form_for @address do |f|
            = hidden_field_tag "address[type]", 'ShippingAddress'
            .visible-xs.visible-sm
              %h3.general-subtitle.mt-0
              = t('users.settings.titles.billing')
            = render 'address_form', f: f, address: @shipping_address
    = render 'privacy'
