.mb-35
  %h3 Best Sellers
  .row
    - @best_sellers.each do |best_seller|
      .col-sm-6.col-md-3
        .general-thumb-wrap
          .thumbnail.general-thumbnail
            = cl_image_tag best_seller.book_attachments.first.picture, class: "img-shadow general-thumbnail-img"
            .thumb-hover
              .general-thumb-link-wrap
                = link_to book_path(best_seller), class: 'thumb-hover-link' do
                  %i.fa.fa-eye.thumb-icon{'aria-hidden': "true"}
                = link_to order_items_path(order_item: {quantity: 1, book_id: best_seller.id}), { method: :post, class: "thumb-hover-link" } do
                  %i.fa.fa-shopping-cart.thumb-icon
        .mb-35
          .clearfix
            %p.pull-right.font-16.in-gold-500
              = number_to_currency(best_seller.price, unit: 'â‚¬')
            %p.title.mr-55
              = best_seller.name
          %span.divider-sm
          %p.lead.small
            = best_seller.authors.map(&:full_name).join(',')
