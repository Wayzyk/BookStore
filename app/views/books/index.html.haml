

%h1.general-title-margin
  = t('titles.catalog')
.hidden-xs.clearfix
  = render 'books/book_sort'
  %ul.list-inline.pt-10.mb-25.mr-240
    %li.mr-3
      = link_to catalog_path, class: "filter-link" do
        All
        %span.badge.general-badge= @categories.sum(&:books_count)
    %li.mr-35
    - Category.all.each do |category|
      %li.mr-35
        = link_to catalog_path(category: category.name), class: "filter-link" do
          = category.name
          %span.badge.general-badge= category.books.count
  .mb-120
    - @books.each_slice(4) do |row|
      .row
      - for book in row
        .col-xs-6.col-sm-3
          .general-thumb-wrap
            .thumbnail.general-thumbnail
              = cl_image_tag book.book_attachments.first.picture, class: "img-shadow general-thumbnail-img"
              .thumb-hover
                .general-thumb-link-wrap
                  = link_to book_path(book), class: 'thumb-hover-link' do
                    %i.fa.fa-eye.thumb-icon{'aria-hidden': "true"}
                  = link_to order_items_path(order_item: {quantity: 1, book_id: book.id}), { method: :post, class: "thumb-hover-link" } do
                    %i.fa.fa-shopping-cart.thumb-icon
          .general-thumb-info
            %p.title
              = book.name
            %p.font-16.in-gold-500
              = number_to_currency(book.price, unit: 'â‚¬')
            %span.divider-sm
            %p.lead.small
              = book.authors.map(&:full_name).join(',')
.text-center
  = paginate @books
  %p
    = page_entries_info @books
