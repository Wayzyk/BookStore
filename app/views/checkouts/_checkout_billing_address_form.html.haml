= f.simple_fields_for @billing_address do |ba|
  .form-group
    %label.control-label.input-label{for: "firstName"} First Name
    = ba.input :first_name, label: false, input_html: { class: 'form-control', value: @billing_address&.first_name }
  .form-group
    %label.control-label.input-label{for: "lastName"} Last Name
    = ba.input :last_name, label: false, input_html: { class: 'form-control', value: @billing_address&.last_name }
  .form-group
    %label.control-label.input-label{for: "address"} Address
    = ba.input :address, label: false, input_html: { class: 'form-control', value: @billing_address&.address }
  .form-group
    %label.control-label.input-label{for: "city"} City
    = ba.input :city, label: false, input_html: { class: 'form-control', value: @billing_address&.city }
  .form-group
    %label.control-label.input-label{for: "zip"} Zip
    = ba.input :zip, label: false, input_html: { class: 'form-control', value: @billing_address&.zip }
  .form-group
    %label.control-label.input-label{for: "—Åountry"} Country
    = ba.input :country, label: false, selected: @billing_address&.country, input_html: { class: 'form-control' }
  .form-group.mb-60
    %label.control-label.input-label{for: "phone"} Phone
    = ba.input :phone, label: false, input_html: { class: 'form-control', value: @billing_address&.phone }
