= simple_form_for @user, url: wizard_path do |f|
  = render 'checkout_navigation_bar'
  .res-mb-100
    .hidden-xs.hidden-sm
      .row
        .col-md-5
          %h3.general-subtitle Billing Address
          %p.general-info-text all fields are required
        .col-md-5.col-md-offset-1
          %h3.general-subtitle Shipping Address
      .row
        .col-md-5.mb-40
          .visible-xs.visible-sm
            %h3.general-subtitle.mt-0 Billing Address
          = render 'checkout_address_form', f: f, address: current_user.billing_address
        .col-md-5.col-md-offset-1.mb-25
          #hidden_fields
            .visible-xs.visible-sm
              %h3.general-subtitle.mt-0 ShippingAddress
            = render 'checkout_address_form', f: f, address: current_user.shipping_address
      .form-group.checkbox
        %label.checkbox-label
          %input.checkbox-input{type: "checkbox", id: "trigger", hidden: "true"}
          %span.checkbox-icon
            %i.fa.fa-check
          %span.checkbox-text Use Billing Address
      = render 'checkout_order_summary'
  = f.submit "Save and Continue", class: "btn center-block mb-20"

:javascript
  $(function() {

    var checkbox = $("#trigger");
    var hidden = $("#hidden_fields");
    hidden.show();
    checkbox.change(function() {
      if (checkbox.is(':checked')) {
        hidden.hide();
      } else {
        hidden.show();
      }
    });
  });
