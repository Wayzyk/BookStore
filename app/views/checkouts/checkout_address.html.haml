= simple_form_for @user, url: wizard_path do |f|
  %h1.general-title-margin Checkout
  %ul.steps.list-inline
    %li.step.active
      %span.step-number 1
      %span.step-text.hidden-xs Address
    %li.step-divider
    %li.step
      %span.step-number 2
      %span.step-text.hidden-xs Delivery
    %li.step-divider
    %li.step
      %span.step-number 3
      %span.step-text.hidden-xs Payment
    %li.step-divider
    %li.step
      %span.step-number 4
      %span.step-text.hidden-xs Confirm
    %li.step-divider
    %li.step
      %span.step-number 5
      %span.step-text.hidden-xs Complete
  %form.res-mb-100
    .hidden-xs.hidden-sm
      .row
        .col-md-5
          %h3.general-subtitle Billing Address
          %p.general-info-text all fields are required
        .col-md-5.col-md-offset-1
          %h3.general-subtitle Shipping Address
      .row
        .col-md-5.mb-40
          = simple_form_for(Address.new, url: { action: "create" }) do |f|
            = hidden_field_tag "address[type]", 'BillingAddress'
            .visible-xs.visible-sm
              %h3.general-subtitle.mt-0 Billing Address
            = render 'addresses/address_form', f: f, address: current_user.billing_address
        .col-md-5.col-md-offset-1.mb-25
          = simple_form_for(Address.new, url: { action: "create" }) do |f|
            = hidden_field_tag "address[type]", 'ShippingAddress'
            .visible-xs.visible-sm
              %h3.general-subtitle.mt-0 ShippingAddress
            = render 'addresses/address_form', f: f, address: current_user.shipping_address
            .form-group.checkbox
              %label.checkbox-label
                %input.checkbox-input{type: "checkbox", hidden: "true"}
                %span.checkbox-icon
                  %i.fa.fa-check
                %span.checkbox-text Use Billing Adress
      .general-text-align.mb-60
        %p.in-gold-500.font-18 Order Summary
        %table.general-summary-table
          %tr
            %td
              %p.font-16 Item Total:
            %td
              %p.font-16 #{number_to_currency current_order.total}
          %tr
            %td
              %p.font-16 Order Total:
            %td
              %p.font-16 â‚¬117.69
        = f.submit "Save and Continue", class: "btn center-block mb-20"
