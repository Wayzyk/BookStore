= simple_form_for @user, url: wizard_path do |f|
  %h1.general-title-margin Checkout
  %ul.steps.list-inline
    %li.step.active
      %span.step-number 1
      %span.step-text.hidden-xs Address
    %li.step-divider
    %li.step
      %span.step-number 2
      %span.step-text.hidden-xs Delivery
    %li.step-divider
    %li.step
      %span.step-number 3
      %span.step-text.hidden-xs Payment
    %li.step-divider
    %li.step
      %span.step-number 4
      %span.step-text.hidden-xs Confirm
    %li.step-divider
    %li.step
      %span.step-number 5
      %span.step-text.hidden-xs Complete
  %form.res-mb-100
    .hidden-xs.hidden-sm
      .row
        .col-md-5
          %h3.general-subtitle Billing Address
          %p.general-info-text all fields are required
        .col-md-5.col-md-offset-1
          %h3.general-subtitle Shipping Address
    .row
      .col-md-5.mb-40
        .visible-xs.visible-sm
          %h3.general-subtitle Billing Address
          %p.general-info-text all fields are required
        .form-group
          %label.control-label.input-label First Name
          = f.input :first_name, input_html: { class: 'form-control' }, label: false
        .form-group
          %label.control-label.input-label Last Name
          = f.input :last_name, input_html: { class: 'form-control' }, label: false
        .form-group
          %label.control-label.input-label Address
          = f.input :address, input_html: { class: 'form-control' }, label: false
        .form-group
          %label.control-label.input-label City
          = f.input :city, input_html: { class: 'form-control' }, label: false
        .form-group
          %label.control-label.input-label Zip
          = f.input :zip, input_html: { class: 'form-control' }, label: false
        .form-group
          %label.control-label.input-label Country
          -# = f.input :country, input_html: { class: 'form-control' }, label: false
        .form-group
          %label.control-label.input-label Phone
          = f.input :phone, input_html: { class: 'form-control' }, label: false
      .col-md-5.col-md-offset-1.mb-60
        .visible-xs.visible-sm
          %h3.general-subtitle Shipping Address
        .form-group.has-error
          %label.control-label.input-label{for: "firstName"} First Name
          %input#firstName.form-control{name:"fname", type: "text", placeholder: "First Name"}
          %span.help-block Please enter your first name
        .form-group
          %label.control-label.input-label{for: "lastName"} Last Name
          %input#lastName.form-control{name:"lname", type: "text", placeholder: "Last Name"}
        .form-group
          %label.control-label.input-label{for: "address"} Address
          %input#address.form-control{name: "address", type: "text", placeholder: "Address"}
        .form-group
          %label.control-label.input-label{for: "city"} City
          %input#city.form-control{name: "city", type: "text", placeholder: "City"}
        .form-group
          %label.control-label.input-label{for: "zip"} Zip
          %input#zip.form-control{name: "zip", type: "text", placeholder: "Zip"}
        .form-group
          %label.control-label.input-label{for: "сountry"} Country
          %select#country.form-control{name: "country", placeholder: "Select a country"}
            %option London
            %option London
            %option London
        .form-group
          %label.control-label.input-label{for: "phone"} Phone
          %input#phone.form-control{name: "phone", type: "tel", placeholder: "Example +355 66 123 4567"}
        .form-group.checkbox
          %label.checkbox-label
            %input.checkbox-input{type: "checkbox", hidden: "true"}
            %span.checkbox-icon
              %i.fa.fa-check
            %span.checkbox-text Use Billing Adress
    .general-text-align.mb-60
      %p.in-gold-500.font-18 Order Summary
      %table.general-summary-table
        %tr
          %td
            %p.font-16 Item Total:
          %td
            %p.font-16 #{number_to_currency current_order.total}
        %tr
          %td
            %p.font-16 Order Total:
          %td
            %p.font-16 €117.69
    = f.submit "Save and Continue", class: "btn center-block mb-20"
