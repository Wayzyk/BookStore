%header.navbar.navbar-default
  .container
    .navbar-header
      %button.navbar-toggle.pull-left{"data-target" => "#navbar", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand
        = t('general.name')
      %a.shop-link.pull-right.visible-xs{:href => "#"}
        %span.shop-icon
          %span.shop-quantity
            = current_order
    %a
      = link_to cart_path, class: "shop-link pull-right hidden-xs" do
        %span.shop-icon
          %span.shop-quantity
            = current_order.order_items.count
    #navbar.navbar-collapse.collapse.pl-30{"aria-expanded" => "false"}
      .hidden-xs
        %ul.nav.navbar-nav
          %li
            = link_to "#{t('titles.home')}", root_path
          %li.dropdown.nav.navbar-nav
            = link_to "#{t('titles.shop')}", catalog_path
            %ul
            %ul#menu.collapse.list-unstyled.pl-30.mb-10{'aria-expanded': "false"}
              = render "layouts/categories"
          - if user_signed_in?
            .dropdown
              %li.dropbtn My Account
              .dropdown-content
                = link_to "Sign Out", destroy_user_session_path, method: :delete
                = link_to "Settings", settings_path
          - else
            %li
              = link_to "Log In", new_user_session_path
            %li
              = link_to "Sign Up", new_user_registration_path
